---
import projects from "../../config/projects.json";
---

<section class="projects___container mb-9">
    <h2 class="projects__title font-bold text-5xl my-5">Projects</h2>

    {
        projects.map((project) => (
            <div class="projects__project flex gap-3 my-3">
                <div class="project__description py-1">
                    <h2 class="text-5xl my-4">{project.title}</h2>
                    <p>{project.description}</p>
                </div>
                <div class="image__container overflow-hidden">
                    <img class="image" src={project.image} alt="" />
                </div>
            </div>
        ))
    }
</section>

<style>
    .image {
        width: 100%;
        height: 100%;
        transition: all 300ms ease-in-out;
    }

    .image:hover {
        transform: scale(1.1);
    }
</style>
