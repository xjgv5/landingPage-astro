---
import features from "../../config/features.json";
---

<h1 class="text-red-700 text-center font-bold text-5xl mt-10 mb-8">Features</h1>

<div class="features__container grid md:grid-cols-3 gap-4">
    {
        features.map((feature) => (
            <div class="feature w-[calc(50% - 10px)] bg-slate-800 rounded-lg mb-9 px-3 py-3">
                <h2 class="text-2xl font-bold mb-6">{feature.title}</h2>
                <p class="text-lg">{feature.description}</p>
            </div>
        ))
    }
</div>

<style>
    .features__container {
        gap: 10px;
    }
</style>
